{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlayerState",
  "description": "Client-side player state for audio playback",
  "type": "object",
  "required": ["state", "isPlaying", "currentTime", "duration", "volume"],
  "properties": {
    "track": {
      "type": "object",
      "nullable": true,
      "description": "Currently loaded track",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "audio_url": { "type": "string" },
        "cover_url": { "type": "string" },
        "duration_seconds": { "type": "number" }
      }
    },
    "version": {
      "type": "object",
      "nullable": true,
      "description": "Currently active version (if applicable)",
      "properties": {
        "id": { "type": "string" },
        "version_number": { "type": "integer" },
        "is_master": { "type": "boolean" },
        "version_type": { "type": "string" }
      }
    },
    "state": {
      "type": "string",
      "enum": ["compact", "expanded", "fullscreen"],
      "description": "Current player UI state"
    },
    "isPlaying": {
      "type": "boolean",
      "description": "Whether audio is currently playing"
    },
    "currentTime": {
      "type": "number",
      "minimum": 0,
      "description": "Current playback position in seconds"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Total duration in seconds"
    },
    "buffered": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Buffered percentage (0-1)"
    },
    "volume": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Volume level (0-1)"
    },
    "muted": {
      "type": "boolean",
      "description": "Whether audio is muted"
    },
    "loading": {
      "type": "boolean",
      "description": "Whether audio is loading"
    },
    "error": {
      "type": "string",
      "nullable": true,
      "description": "Error message if playback failed"
    },
    "queue": {
      "type": "object",
      "nullable": true,
      "description": "Playback queue state",
      "properties": {
        "current_track": {
          "type": "object",
          "description": "Current track in queue"
        },
        "current_version": {
          "type": "object",
          "nullable": true,
          "description": "Current version of track"
        },
        "queue": {
          "type": "array",
          "items": { "type": "object" },
          "description": "Upcoming tracks"
        },
        "history": {
          "type": "array",
          "items": { "type": "object" },
          "maxItems": 50,
          "description": "Previously played tracks"
        },
        "repeat_mode": {
          "type": "string",
          "enum": ["off", "one", "all"],
          "description": "Repeat mode"
        },
        "shuffle": {
          "type": "boolean",
          "description": "Whether shuffle is enabled"
        },
        "shuffle_order": {
          "type": "array",
          "items": { "type": "integer" },
          "description": "Pre-shuffled indices for consistent shuffle"
        },
        "source": {
          "type": "string",
          "enum": ["library", "playlist", "public", "project", "artist"],
          "description": "Source of the queue"
        },
        "source_id": {
          "type": "string",
          "nullable": true,
          "description": "ID of the source (playlist ID, project ID, etc.)"
        }
      }
    },
    "lyrics": {
      "type": "object",
      "nullable": true,
      "description": "Lyrics state",
      "properties": {
        "show": {
          "type": "boolean",
          "description": "Whether to show lyrics"
        },
        "current_word_index": {
          "type": "integer",
          "nullable": true,
          "description": "Index of currently highlighted word"
        },
        "type": {
          "type": "string",
          "enum": ["plain", "timestamped"],
          "description": "Type of lyrics"
        }
      }
    },
    "waveform": {
      "type": "object",
      "nullable": true,
      "description": "Waveform visualization data",
      "properties": {
        "show": {
          "type": "boolean"
        },
        "peaks": {
          "type": "array",
          "items": { "type": "number" }
        }
      }
    }
  }
}
